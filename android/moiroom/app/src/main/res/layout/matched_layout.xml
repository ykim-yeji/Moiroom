<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparentWhite">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stateListAnimator="@null"
        android:elevation="0dp"
        android:background="@color/transparentWhite"
        app:contentScrim="@color/transparentWhite"
        app:statusBarScrim="@color/transparentWhite">

        <!-- 스크롤 시 숨겨질 영역 -->
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/transparentWhite"
            app:statusBarScrim="@color/transparentWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/matchRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/darkorange"
                        android:textSize="52sp"
                        android:text="@string/sampleMatchRate"/>

                    <TextView
                        android:id="@+id/matchRateSymbol"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_bold"
                        android:textColor="@color/darkorange"
                        android:textSize="36sp"
                        android:text="%"/>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/matchIntroductionContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="12dp">

                    <View
                        android:id="@+id/underline"
                        android:layout_width="wrap_content"
                        android:layout_height="8dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:background="#FFC27A"
                        android:visibility="invisible"/>

                    <TextView
                        android:id="@+id/matchIntroduction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/pretendard_bold"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:text="@string/sampleString"/>

                </FrameLayout>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <LinearLayout
            android:id="@+id/profileContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="12dp"
            android:background="@color/transparentWhite"
            app:contentScrim="@color/transparentWhite"
            app:statusBarScrim="@color/transparentWhite"
            android:layout_below="@id/matchIntroductionContainer">

            <androidx.cardview.widget.CardView
                android:id="@+id/profileImageContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/sample_profile1"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_semibold"
                    android:gravity="center"
                    android:textSize="22sp"
                    android:text="@string/sampleNickname"/>

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center"
                    android:textColor="@color/font_Gray_2"
                    android:textSize="18sp"
                    android:text="@string/sampleString"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/chatbuttonContainer"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center_vertical"
                app:cardBackgroundColor="@color/darkorange"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chatting"
                    app:tint="@color/white"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/introductionContainer"
            android:background="@color/mediumGray"
            app:layout_collapseMode="parallax"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 스크롤 되는 영역 -->
    <!-- AppBarLayout과 호환을 위한 코드 app:layout_behavior="@string/appbar_scrolling_view_behavior" -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="12dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/introductionContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"

                app:cardCornerRadius="48dp"
                app:cardBackgroundColor="@color/BGgray"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/introduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="24dp"
                    android:layout_marginVertical="8dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:gravity="center"
                    android:lineSpacingExtra="4sp"
                    android:textSize="16sp"
                    android:text="@string/sampleString"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="6dp"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/darkorange"
                    android:src="@drawable/character_information"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_gravity="center_vertical"
                    android:text="성향"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/radarChartContainer"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    app:cardBackgroundColor="@color/main_orange"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="나"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/radar_chart_roommate_legend_color"
                    android:layout_width="20dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    app:cardBackgroundColor="@color/main_orange"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="4dp"/>

                <TextView
                    android:id="@+id/radar_chart_roommate_legend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="룸메이트 닉네임"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                tools:listitem="@layout/characteristic_item_layout" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_marginBottom="12dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="4dp"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/characterIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center_vertical"
                            app:tint="@color/socialable"
                            android:src="@drawable/character_socialability"/>

                        <TextView
                            android:id="@+id/characterDetailName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="4dp"
                            android:fontFamily="@font/pretendard_bold"
                            android:textSize="16dp"
                            android:text="성향 이름"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/characterDetailDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/fontGray"
                        android:text="성향에 대한 1줄 정도의 간략한 설명"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/characterDescriptionButton"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_help"
                    app:tint="@color/gray_low_brightness"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/pinWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/characterLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:tint="@color/darkorange"
                        android:src="@drawable/character_member_pin"/>

                    <ImageView
                        android:id="@+id/characterLocation2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:tint="@color/darkorange"
                        android:src="@drawable/character_person_pin"/>

                </FrameLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pinBase"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginBottom="12dp"
                    app:cardBackgroundColor="@color/BGgray"
                    app:cardCornerRadius="4dp"
                    app:cardElevation="0dp"/>

                <TextView
                    android:id="@+id/myCharacterDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/pretendard_semibold"
                    android:text="나의 특정 성향에 대한 설명, 상위 퍼센트 등"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="36dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="6dp"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/darkorange"
                    android:src="@drawable/character_interests"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_gravity="center_vertical"
                    android:text="관심사"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginBottom="8dp"
                    tools:listitem="@layout/interest_chart_item_layout"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler2"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    tools:listitem="@layout/interest_chart_item_layout"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/interestRecyclerView"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    tools:listitem="@layout/interest_item_layout" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/interestRecyclerView2"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    tools:listitem="@layout/interest_item_layout" />

            </RelativeLayout>

            <TextView
                android:id="@+id/myInterestDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/pretendard_semibold"
                android:text="나의 관심사에 대한 설명 등"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="6dp"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/darkorange"
                    android:src="@drawable/character_sleep"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_bold"
                    android:layout_gravity="center_vertical"
                    android:text="수면"
                    android:textSize="20sp"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="20dp">

                <!-- com.example.moiroom.view.SleepChartView
                    android:id="@+id/sleepChartView"
                    android:layout_width="360dp"
                    android:layout_height="360dp"
                    android:layout_gravity="center"/-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="80dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="2dp"
                        android:textSize="16dp"
                        android:text="취침 시간"/>

                    <TextView
                        android:id="@+id/sleepTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textSize="20dp"
                        android:text="23:30"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="2dp"
                        android:textSize="16dp"
                        android:text="기상 시간"/>

                    <TextView
                        android:id="@+id/wakeTimeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textSize="20dp"
                        android:text="07:30"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="16dp"
                    android:textSize="16dp"
                    android:textAlignment="textStart"
                    android:text="00:00"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:textSize="16dp"
                    android:textAlignment="textEnd"
                    android:text="24:00"/>

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>