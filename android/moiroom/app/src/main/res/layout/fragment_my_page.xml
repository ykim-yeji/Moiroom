<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragmentContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@color/BGgray">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/imageCard"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="8dp">

                        <ImageView
                            android:id="@+id/memberProfileImage"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_gravity="top"
                            android:scaleType="centerCrop"
                            android:src="@drawable/sample_profile1" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/memberNickname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="nickname"
                            android:fontFamily="@font/pretendard_semibold"
                            android:textSize="24dp"
                            android:layout_marginHorizontal="4dp"
                            android:layout_marginTop="8dp"/>

                        <TextView
                            android:id="@+id/memberName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_regular"
                            android:textSize="16dp"
                            android:layout_marginHorizontal="4dp"
                            android:text="name" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/memberGender"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_regular"
                                android:textSize="16dp"
                                android:layout_marginHorizontal="4dp"
                                android:text="gender" />

                            <TextView
                                android:id="@+id/memberBirthYear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/pretendard_regular"
                                android:textSize="16dp"
                                android:layout_marginHorizontal="4dp"
                                android:text="birthYear" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#E1E1E1"
                    android:layout_marginHorizontal="8dp"/>

                <TextView
                    android:id="@+id/memberIntroduction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginVertical="8dp"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="16dp"
                    android:text="introduction" />

            </LinearLayout>

            <ImageView
                android:id="@+id/editButton"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@color/darkorange"
                android:layout_weight="1"
                android:src="@drawable/edit_fill0_wght400_grad0_opsz24"
                android:paddingHorizontal="4dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginLeft="12dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/analytics_fill0_wght400_grad0_opsz24"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="분석"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textSize="24dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/radarChartContainer"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical">

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#E1E1E1"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="12dp" />

            <LinearLayout
                android:id="@+id/detailButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/pretendard_regular"
                    android:textSize="16dp"
                    android:text="전체 분석 보기"
                    android:layout_gravity="center_vertical"/>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginRight="12dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/arrow_right_fill0_wght400_grad0_opsz24"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/advancedSettingButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        app:cardElevation="0dp"
        app:cardCornerRadius="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="고급 설정"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="16dp"
            android:fontFamily="@font/pretendard_regular"
            android:textSize="16dp"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="12dp"
            android:layout_gravity="end|center_vertical"
            app:tint="@color/grey"
            android:src="@drawable/arrow_right_fill0_wght400_grad0_opsz24"/>

    </androidx.cardview.widget.CardView>

</LinearLayout>