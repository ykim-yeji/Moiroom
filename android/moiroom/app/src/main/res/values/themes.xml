<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Moiroom" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 색상 테마 설정 -->
        <item name="colorPrimaryDark">@color/main_orange</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/gray_medium_brightness</item>
        <item name="colorControlActivated">@color/main_orange</item>

        <!-- 기본 폰트 및 색상 설정 -->
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">@color/black</item>

        <!-- 상태 바 색상 설정 -->
        <item name="android:statusBarColor">@color/white_transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.Moiroom" parent="Base.Theme.Moiroom" />
</resources>
