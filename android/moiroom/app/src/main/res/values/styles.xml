<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="HeaderStyle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#141414</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="ToggleButtonGroupStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeWidth">5dp</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="NowMatchingTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/darkorange</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/lightorange</item>
        <item name="colorControlActivated">@color/darkorange</item>

        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textColor">@color/black</item>

        <!-- 상태 바 색상 설정 -->
        <item name="android:statusBarColor">@color/darkorange</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
    <style name="ChatActivityTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/lightgray</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- 다이얼로그 배경 설정 -->
    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <!-- 다이얼로그의 배경 색상을 설정합니다. -->
        <item name="android:windowBackground">@drawable/dialog_background</item>
    </style>

    <style name="AppBarTheme" parent="Base.Theme.Moiroom">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

</resources>