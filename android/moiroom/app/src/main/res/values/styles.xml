<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NowMatchingTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/main_orange</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/gray_medium_brightness</item>
        <item name="colorControlActivated">@color/main_orange</item>
        <item name="android:statusBarColor">@color/main_orange</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="ChatActivityTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/gray_high_brightness</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
    </style>

    <style name="AppBarTheme" parent="Base.Theme.Moiroom">
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

</resources>